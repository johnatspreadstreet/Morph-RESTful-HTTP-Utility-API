{
  "name": "monorepo",
  "version": 2,
  "builds": [
      { "src": "www/package.json", "use": "@now/next" },
      { "src": "api/python/*.py", "use": "@ardent-labs/now-python-wsgi" }
  ],
  "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/redirect-test",
        "status": 302,
        "headers": {
          "location": "https://google.com"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/www/$1",
        "headers": {
          "x-request-path": "$1"
        }
      }
  ]
}